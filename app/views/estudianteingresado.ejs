<% include header %>

<h3>Codigo "<%= codigo %>"<br/>Esperando pregunta...</h3>

<script type="text/javascript">
    var socket = io.connect('http://localhost:3000');
    socket.emit('join', {codigo: "<%= codigo %>", tipo: "estudiante"});

    socket.on("pregunta realizada", function(data) {
        console.log(data);
        window.location = "/estudiante/realizarpregunta/" + data.pmid + "/" + data.prid;
    });
</script>

